                </div>

                {formData.goals.length > 0 && (
                  <div className="mt-6 p-5 bg-purple-600/5 rounded-xl border border-purple-600/10">
                    <p className="text-sm text-gray-700">
                      <span className="font-semibold text-purple-600">{formData.goals.length} goal{formData.goals.length !== 1 ? 's' : ''} selected</span> â€” We'll create a personalized plan to help you achieve these
                    </p>
                  </div>
                )}

                {formData.goals.length === 0 && (
