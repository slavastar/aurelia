'use client';

import { useState, useEffect } from 'react';
import { useRouter } from 'next/navigation';
import { 
  QuestionnaireData, 
  CycleStatus, 
  ExerciseFrequency, 
  StressLevel,
  COMMON_SYMPTOMS,
  HEALTH_GOALS,
  Biomarkers
} from '@/types';

// Step configuration with emojis and descriptions
const STEP_CONFIG = [
  {
    number: 1,
    emoji: 'ðŸ‘¤',
    title: 'About You',
    subtitle: 'Let\'s start with the basics',
    color: 'from-purple-500 to-pink-500'
  },
  {
    number: 2,
    emoji: 'ðŸ©º',
    title: 'Your Symptoms',
    subtitle: 'Tell us what you\'re experiencing',
    color: 'from-pink-500 to-rose-500'
  },
  {
    number: 3,
    emoji: 'ðŸ’ª',
    title: 'Lifestyle',
    subtitle: 'Your daily habits matter',
    color: 'from-rose-500 to-orange-500'
  },
  {
    number: 4,
    emoji: 'ðŸŽ¯',
    title: 'Your Goals',
    subtitle: 'What do you want to achieve?',
    color: 'from-orange-500 to-amber-500'
  },
  {
    number: 5,
    emoji: 'ðŸ“‹',
    title: 'Medical History',
    subtitle: 'Help us understand your background',
    color: 'from-amber-500 to-lime-500'
  }
];

export default function QuestionnairePage() {
  const router = useRouter();
  const [biomarkers, setBiomarkers] = useState<Biomarkers>({});
  const [currentStep, setCurrentStep] = useState(1);
  const [direction, setDirection] = useState<'forward' | 'backward'>('forward');
  const [isTransitioning, setIsTransitioning] = useState(false);
  const [showCelebration, setShowCelebration] = useState(false);
  const totalSteps = 5;

  const [formData, setFormData] = useState<QuestionnaireData>({
    age: 30,
    cycleStatus: 'follicular',
    symptoms: [],
    sleepHours: 7,
    sleepQuality: 'good',
    exerciseFrequency: 'moderate',
    stressLevel: 'moderate',
    goals: [],
  });

  useEffect(() => {
    const stored = sessionStorage.getItem('biomarkers');
    if (stored) {
      setBiomarkers(JSON.parse(stored));
    }
  }, [router]);

  const handleNext = () => {
    if (currentStep < totalSteps) {
      setDirection('forward');
      setIsTransitioning(true);
      setTimeout(() => {
        setCurrentStep(currentStep + 1);
        setIsTransitioning(false);
        // Show celebration on step completion
        if (currentStep === 2 || currentStep === 4) {
          setShowCelebration(true);
          setTimeout(() => setShowCelebration(false), 2000);
        }
      }, 300);
    } else {
      handleSubmit();
    }
  };

  const handleBack = () => {
    if (currentStep > 1) {
      setDirection('backward');
      setIsTransitioning(true);
      setTimeout(() => {
        setCurrentStep(currentStep - 1);
        setIsTransitioning(false);
      }, 300);
    }
  };

  const handleSubmit = () => {
    sessionStorage.setItem('questionnaireData', JSON.stringify(formData));
    setShowCelebration(true);
    setTimeout(() => {
      router.push('/upload');
    }, 1500);
  };

  const toggleSymptom = (symptom: string) => {
    setFormData(prev => ({
      ...prev,
      symptoms: prev.symptoms.includes(symptom)
        ? prev.symptoms.filter(s => s !== symptom)
        : [...prev.symptoms, symptom],
    }));
  };

  const toggleGoal = (goal: string) => {
    setFormData(prev => ({
      ...prev,
      goals: prev.goals.includes(goal)
        ? prev.goals.filter(g => g !== goal)
        : [...prev.goals, goal],
    }));
  };

  const canProceed = () => {
    switch (currentStep) {
      case 1:
        return formData.age >= 18 && formData.age <= 120;
      case 2:
        return formData.symptoms.length > 0;
      case 3:
        return true;
      case 4:
        return formData.goals.length > 0;
      case 5:
        return true;
      default:
        return true;
    }
  };

  const currentStepConfig = STEP_CONFIG[currentStep - 1];

  return (
    <div className="min-h-screen bg-gradient-to-br from-purple-600/5 via-white to-violet-500/10 py-12 px-4 relative overflow-hidden">
      {/* Animated background elements */}
      <div className="absolute inset-0 overflow-hidden pointer-events-none">
        <div className="absolute top-20 left-10 w-72 h-72 bg-violet-500/10 rounded-full blur-3xl animate-pulse-slow" />
        <div className="absolute bottom-20 right-10 w-96 h-96 bg-purple-600/10 rounded-full blur-3xl animate-pulse-slow" style={{ animationDelay: '1s' }} />
      </div>

      {/* Subtle success notification */}
      {showCelebration && (
        <div className="fixed top-8 left-1/2 transform -translate-x-1/2 z-50 animate-fade-in">
          <div className="bg-gradient-to-r from-purple-600 to-violet-500 text-white px-6 py-3 rounded-full shadow-lg flex items-center gap-2">
            <svg className="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path fillRule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clipRule="evenodd" />
            </svg>
            <span className="font-medium">Progress saved</span>
          </div>
        </div>
      )}

      <div className="max-w-4xl mx-auto relative z-10">
        {/* Header - Clean and minimal */}
        <div className="text-center mb-12 animate-fade-in">
          <div className="inline-flex items-center justify-center w-16 h-16 rounded-2xl bg-gradient-to-r from-purple-600 to-violet-500 mb-6 shadow-lg">
            <span className="text-3xl">{currentStepConfig.emoji}</span>
          </div>
          <h1 className="text-4xl md:text-5xl font-bold text-purple-600 mb-3">
            {currentStepConfig.title}
          </h1>
          <p className="text-lg text-gray-600 max-w-2xl mx-auto">
            {currentStepConfig.subtitle}
          </p>
        </div>

        {/* Minimal Progress Bar */}
        <div className="bg-white rounded-2xl shadow-lg border border-gray-100 p-8 mb-8 animate-fade-in">
          <div className="flex items-center justify-between mb-6">
            <span className="text-sm font-semibold text-gray-900">
              Step {currentStep} of {totalSteps}
            </span>
            <span className="text-sm font-semibold text-purple-600">
              {Math.round((currentStep / totalSteps) * 100)}%
            </span>
          </div>
          
          {/* Sleek progress bar */}
          <div className="relative w-full bg-gray-100 rounded-full h-2 overflow-hidden">
            <div
              className="gradient-aurelia h-2 rounded-full transition-all duration-700 ease-out"
              style={{ width: `${(currentStep / totalSteps) * 100}%` }}
            />
          </div>

          {/* Minimal step indicators */}
          <div className="flex justify-between mt-6">
            {STEP_CONFIG.map((step) => (
              <div
                key={step.number}
                className="flex flex-col items-center gap-2 transition-all duration-300"
              >
                <div
                  className={`w-10 h-10 rounded-xl flex items-center justify-center text-sm font-semibold transition-all duration-300 ${
                    step.number < currentStep
                      ? 'bg-gradient-to-r from-purple-600 to-violet-500 text-white shadow-md'
                      : step.number === currentStep
                      ? 'bg-gradient-to-r from-purple-600 to-violet-500 text-white shadow-lg ring-2 ring-violet-500/40'
                      : 'bg-gray-100 text-gray-400'
                  }`}
                >
                  {step.number < currentStep ? 'âœ“' : step.number}
                </div>
                <span className="text-xs font-medium text-gray-500 hidden md:block max-w-[60px] text-center">
                  {step.title}
                </span>
              </div>
            ))}
          </div>
        </div>

        {/* Form Content - Clean design */}
        <div className="bg-white rounded-2xl shadow-lg border border-gray-100 p-8 md:p-12 mb-8 relative overflow-hidden">
          {/* Subtle top accent */}
          <div className="absolute top-0 left-0 right-0 h-0.5 bg-gradient-to-r from-purple-600 to-violet-500" />
          
          <div
            className={`transition-all duration-300 ${
              isTransitioning
                ? direction === 'forward'
                  ? 'opacity-0 translate-x-8'
                  : 'opacity-0 -translate-x-8'
                : 'opacity-100 translate-x-0'
            }`}
          >
            {/* Step 1: Basic Info */}
            {currentStep === 1 && (
              <div className="space-y-8 animate-fade-in">
                <div className="mb-8">
                  <h2 className="text-2xl font-bold text-gray-900 mb-2">Let's get started</h2>
                  <p className="text-gray-600">Tell us a bit about yourself</p>
                </div>
                
                <div className="space-y-6">
                  <div className="group">
                    <label className="block text-sm font-semibold text-gray-900 mb-3">
                      Your Age *
                    </label>
                    <input
                      type="number"
                      min="18"
                      max="120"
                      value={formData.age}
                      onChange={(e) => setFormData({ ...formData, age: parseInt(e.target.value) })}
                      className="w-full px-5 py-4 border border-gray-200 rounded-xl focus:ring-2 focus:ring-purple-600/20 focus:border-purple-600 transition-all duration-200 text-base bg-gray-50 hover:bg-white hover:border-gray-300"
                      placeholder="Enter your age"
                    />
                  </div>

                  <div className="group">
                    <label className="block text-sm font-semibold text-gray-900 mb-3">
